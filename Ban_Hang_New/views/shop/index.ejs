<div class="container my-5">
  <h2 class="text-center text-success mb-4">🛍️ Danh sách sản phẩm</h2>

  <div class="row">
    <% products.forEach(product => { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <a href="/shop/detail/<%= product.id %>">
            <img 
              src="<%= product.imageUrl.startsWith('http') ? product.imageUrl : '/uploads/' + product.imageUrl %>" 
              class="card-img-top img-fluid"
              alt="<%= product.name %>">
          </a>
          <div class="card-body text-center">
            <a href="/shop/detail/<%= product.id %>" class="text-decoration-none text-dark">
              <h5 class="card-title fw-bold"><%= product.name %></h5>
            </a>
            <p class="text-danger fw-semibold"><%= product.price.toLocaleString() %> VNĐ</p>
            <form action="/cart/add/<%= product.id %>" method="POST">
              <button type="submit" class="btn btn-outline-success w-100">
                🛒 Thêm vào giỏ
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
