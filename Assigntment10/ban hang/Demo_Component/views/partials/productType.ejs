<div class="inner-header">
    <div class="container">
        <div class="pull-left">
            <h6 class="inner-title">Sản phẩm</h6>
        </div>
        <div class="pull-right">
            <div class="beta-breadcrumb font-large">
                <a href="/">Home</a> / <span>Sản phẩm</span>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<div class="container">
    <div id="content" class="space-top-none">
        <div class="main-content">
            <div class="space60">&nbsp;</div>
            <div class="row">
                <div class="col-sm-3">
                    <ul class="aside-menu">
                        <li><a href="#">Bánh kem</a></li>
                        <li><a href="#">Bánh mỳ</a></li>
                        <li><a href="#">Bánh ngọt</a></li>
                        <li><a href="#">Bánh quy</a></li>
                        <li><a href="#">Bánh tráng miệng</a></li>
                        <li><a href="#">Sản phẩm khác</a></li>
                    </ul>
                </div>
                <div class="col-sm-9">
                    <div class="beta-products-list">
                        <h4>New Products</h4>
                        <div class="beta-products-details">
                            <p class="pull-left">Tìm thấy <%= products.length %> sản phẩm</p>
                            <div class="clearfix"></div>
                        </div>

                        <div class="product-list-grid">
                            <% products.forEach(product => { %>
                                <div class="single-item">
                                    <% if (product.promotion_price && product.promotion_price < product.unit_price) { %>
                                        <div class="ribbon-wrapper"><div class="ribbon sale">Sale</div></div>
                                    <% } %>
                                    <div class="single-item-header">
                                        <a href="/product/<%= product._id %>">
                                            <div class="product-img-container">
                                                <img src="/image/product/<%= product.image %>" class="card-image" alt="<%= product.name %>">
                                            </div>
                                        </a>
                                    </div>
                                    <div class="single-item-body">
                                        <p class="single-item-title"><%= product.name %></p>
                                        <p class="single-item-price">
                                            <% if (product.promotion_price && product.promotion_price < product.unit_price) { %>
                                                <span class="flash-del">$<%= product.unit_price %></span>
                                                <span class="flash-sale">$<%= product.promotion_price %></span>
                                            <% } else { %>
                                                <span>$<%= product.unit_price %></span>
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="single-item-caption">
                                        <a class="add-to-cart" href="/cart/add/<%= product._id %>">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                        <a class="beta-btn primary" href="/product/<%= product._id %>">
                                            Chi tiết <i class="fa fa-chevron-right"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div> <div class="space50">&nbsp;</div>

                    <div class="beta-products-list">
                        <h4>Top Products</h4>
                        <div class="beta-products-details">
                            <p class="pull-left">Tìm thấy 3 sản phẩm</p>
                            <div class="clearfix"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="single-item">
                                    <div class="single-item-header">
                                        <a href="product.html"><img src="assets/dest/images/products/1.jpg" alt=""></a>
                                    </div>
                                    <div class="single-item-body">
                                        <p class="single-item-title">Sample Woman Top</p>
                                        <p class="single-item-price">
                                            <span>$34.55</span>
                                        </p>
                                    </div>
                                    <div class="single-item-caption">
                                        <a class="add-to-cart pull-left" href="shopping_cart.html"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="beta-btn primary" href="product.html">Details <i class="fa fa-chevron-right"></i></a>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                           </div>
                    </div> </div>
            </div> </div> </div> </div>

<style>
.product-list-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 32px;
}
.single-item {
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    background: #fff;
    box-shadow: 0 2.5px 12px rgba(30,60,90,0.06);
    border: 1px solid #ececec;
    overflow: hidden;
    transition: box-shadow .22s;
    padding: 0 0 18px 0;
    min-height: 355px;
}
.single-item-header {padding: 0;}
.product-img-container {
    width:100%;
    aspect-ratio: 4/3;
    background: #f6f8fc;
    display:flex;align-items:center;justify-content:center;
    overflow: hidden;
    border-bottom: 1px solid #f1f1f1;
}
.card-image {
    width: 100%; height: 100%;
    object-fit: cover; border-radius: 8px;
    max-height: 200px;
    box-shadow: 0 1.5px 3px rgba(60,60,60,0.08);
    background: #fff;
}
.single-item-body {padding: 14px 16px 4px 16px;flex:1;}
.single-item-title {font-size:18px;text-align:center;margin-bottom:6px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.single-item-price {text-align:center;margin-bottom:0;font-weight:500;}
.single-item-caption {display:flex;justify-content:center;gap:18px;padding:10px 0 0 0;}
.add-to-cart i {font-size:18px;}
@media (max-width: 800px) {.product-list-grid {gap:18px;}}
</style>