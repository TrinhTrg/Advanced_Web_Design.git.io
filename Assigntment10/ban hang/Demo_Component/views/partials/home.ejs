	<div class="product-list-section" style="padding: 40px 0 64px 0; background: transparent;">
  <div class="container">
    <h4 class="text-2xl font-semibold mb-4" style="text-align:center;">New Products</h4>
    <div class="product-list-grid">
    <% products.forEach(product => { %>
      <div class="single-item">
        <div class="single-item-header">
          <a href="/product/<%= product._id %>">
            <div class="product-img-container">
              <img src="/image/product/<%= product.image %>" class="card-image" alt="<%= product.name %>">
            </div>
          </a>
        </div>
        <div class="single-item-body">
          <p class="single-item-title"><%= product.name %></p>
          <p class="single-item-price">$<%= product.unit_price %></p>
        </div>
        <div class="single-item-caption">
          <a class="add-to-cart" href="/cart/add/<%= product._id %>">
            <i class="fa fa-shopping-cart"></i>
          </a>
          <a class="beta-btn primary" href="/product/<%= product._id %>">
            Chi tiáº¿t <i class="fa fa-chevron-right"></i>
          </a>
        </div>
      </div>
    <% }) %>
    </div>
    <style>
    .product-list-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 32px;
    }
    .single-item {
      display: flex;
      flex-direction: column;
      border-radius: 12px;
      background: #fff;
      box-shadow: 0 2.5px 12px rgba(30,60,90,0.06);
      border: 1px solid #ececec;
      overflow: hidden;
      transition: box-shadow .22s;
      padding: 0 0 18px 0;
      min-height: 355px;
    }
    .single-item-header {padding: 0;}
